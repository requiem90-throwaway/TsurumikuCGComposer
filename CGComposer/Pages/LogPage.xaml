<Page x:Class="CGComposer.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CGComposer"
      mc:Ignorable="d" 
      Width="auto" Height="auto"
      Title="LogPage"
      Loaded="Page_Loaded">

    <Grid>
        <TextBox x:Name="LogTextBox" Margin="15,15,15,50" Background="Black" Foreground="Lime" IsReadOnly="True" IsReadOnlyCaretVisible="True" TextChanged="LogTextBox_TextChanged" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Height="25" Margin="15" Click="OKButton_Click"/>
    </Grid>
</Page>
