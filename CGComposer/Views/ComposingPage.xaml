<Page x:Class="CGComposer.ComposingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CGComposer"
      mc:Ignorable="d" 
      Width="auto" Height="auto"
      Title="ComposingPage">

    <Border Padding="15">
        <DockPanel LastChildFill="True">
            <Button x:Name="OKButton" DockPanel.Dock="Bottom" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Height="25" Margin="0, 5, 0, 0"/>
            <ProgressBar x:Name="ProgressBar" DockPanel.Dock="Bottom" Height="20" Margin="0, 5, 0, 5"
                         Minimum="0" Maximum="{Binding CompositionItemsCount, Mode=OneTime}" Value="{Binding CompletedCompositionItemsCount, Mode=OneWay}"/>
            <TextBox x:Name="LogTextBox" Margin="0, 0, 0, 5" Background="Black" Foreground="Lime" IsReadOnly="True" IsReadOnlyCaretVisible="True"
                     Text="{Binding ComposeProgessLog, Mode=OneWay, Delay=50}"/>
        </DockPanel>
    </Border>
</Page>
